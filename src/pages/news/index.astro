---
let searchString = Astro.url.searchParams.get('q');
import Layout from '#/Layout.astro';
import Input from '@/Input';
import Cards from '@/cards.astro';

const response = await fetch(`https://newsapi.org/v2/everything?q=${searchString?searchString:'india'}&apiKey=${import.meta.env.API_KEY}`);
const data = await response.json();
const articles = await data.articles as NewsArticle[];
---


<Layout title="Explore : In News">
	<main class="flex relative flex-col w-full pt-20 pb-4 gap-4">
    <div class="flex fixed w-full left-0 p-4 rounded-xl bg-white right-0 max-w-[900px] mx-auto top-10 z-[900] flex-col  my-4">
      <Input data={searchString} client:load/>
    </div>
    <div class="grid pt-16 grid-cols-1 [&:nth-child(5)]:col-span-2 sm:grid-cols-2 w-full place-items-stretch gap-3 h-full">
      {articles.length>0 && articles.map((data:NewsArticle)=>(
        <Cards article={data} />
        ))}
        {!(articles.length>0) && (
          <div class="flex flex-col gap-2">
            <h1 class="text-4xl font-bold">No Data Available</h1>
            <h1 class="text-sm">Invalid Request</h1>
            <h1 class="text-sm">Please search other terms.</h1>
            </div>
        )}
	</div>
</main>
</Layout>

