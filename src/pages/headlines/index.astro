---
import Layout from '#/Layout.astro';
import Cards from '@/cards.astro';

const response = await fetch(`https://newsapi.org/v2/top-headlines?country=in&apiKey=${import.meta.env.API_KEY}`);
const data = await response.json();
const articles = await data.articles as NewsArticle[];
---

<Layout title="Explore : In News">
	<main class="grid pt-20 pb-4 grid-cols-1 [&:nth-child(5)]:col-span-2 sm:grid-cols-2 w-full place-items-stretch gap-3 h-full">
    {articles.map((data:NewsArticle)=>(
          <Cards article={data} />
        ))}
	</main>
</Layout>

